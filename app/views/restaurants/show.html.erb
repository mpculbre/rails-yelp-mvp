
<div class="container justify-content-center">
  <div class="row justify-content-center" style="padding: 1em">
    <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @restaurant.name %></h1>
      <hr>
      <p> Address: <%= @restaurant.address %> </p>
      <hr>
      <p> Phone: <%= @restaurant.phone_number %> </p>
      <hr>
      <p> Category: <%= @restaurant.category.capitalize %> </p>
      <hr>
      <h4>Reviews: </h4>
      <% @reviews.each do |review| %>
        <li> "<%= review.content %>" | <%= review.rating %></li>
      <% end %>
      <br><br>
      <%= link_to new_restaurant_review_path(@restaurant) do%>
        <i class="far fa-comment"></i>
        <p>Add a review</p>
      <% end  %>
    </div>
  </div>
</div>
